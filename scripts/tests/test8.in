// Define a recursive function to calculate the factorial of a number
def: factorial <- n
    if: n == 1
        nb: result = 1
    endif
    if: n != 1
        factorial: a <- n - 1
        nb: result = n * a
    endif
    return: result
enddef

// Call the recursive factorial function
factorial: a <- 5
out: "factorial:"
out: a // should be 120 as 5! = 120